<%= form_for :animes, url: animes_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :runtime %><br>
    <%= f.text_field :runtime %>
  </p>
 
   <p>
    <%= f.label :age_rating  %><br>
    <%= f.text_field :age_rating %>
  </p>

  <p>
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>