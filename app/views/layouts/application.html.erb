          <form class="navbar-form navbar-right" role="form">
            <div class="form-group">
              <input type="text" placeholder="Search" class="form-control">
            </div>
            <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <%= yield %>

